{
  "assets": [
    {
      "required":      true,
      "name":          "main",
      "adjust_size":   true,
      "width":         1500,
      "height":        1500,
      "min_width":     150,
      "min_height":    150,
      "animated":      true,
      "sound":         true,
      "thumbs":        ["300x", "500x"],
      "allowed_types": ["video"]
    },
    {
      "required":      false,
      "name":          "preview",
      "width":         1500,
      "height":        1500,
      "min_width":     150,
      "min_height":    150,
      "animated":      false,
      "allowed_types": ["image"]
    },
    {
      "required":      false,
      "name":          "logo",
      "width":         100,
      "height":        100,
      "min_width":     50,
      "min_height":    50,
      "animated":      false,
      "sound":         false,
      "allowed_types": ["image"]
    }
  ],
  "fields": [
    {
      "required":      true,
      "title":         "Title",
      "name":          "title",
      "type":          "string",
      "min":           3,
      "max":           150
    },
    {
      "required":     false,
      "title":        "Display start",
      "name":         "start",
      "type":         "string",
      "select":       [
        "start",
        "first_quartile",
        "midpoint",
        "third_quartile",
        "complete"
      ]
    },
    {
      "required":     false,
      "title":        "Display on specific time",
      "name":         "start_on",
      "exclude":      ["start"],
      "type":         "int"
    }
  ]
}