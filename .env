## Opentracing https://www.jaegertracing.io/docs/1.10/getting-started/
# docker run --rm -it --label=service.name=jaeger -p 6831:6831/udp -p 16686:16686 jaegertracing/all-in-one:latest
JAEGER_SERVICE_NAME=sspserver
JAEGER_DISABLED=false
JAEGER_RPC_METRICS=true
JAEGER_TAGS=debug=true
JAEGER_SAMPLER_TYPE=probabilistic
# JAEGER_SAMPLER_TYPE=remote
JAEGER_SAMPLER_PARAM=1
JAEGER_SAMPLER_MANAGER_HOST_PORT=
JAEGER_SAMPLER_MAX_OPERATIONS=100
JAEGER_SAMPLER_REFRESH_INTERVAL=1s
JAEGER_REPORTER_MAX_QUEUE_SIZE=1000
JAEGER_REPORTER_FLUSH_INTERVAL=100ms
JAEGER_REPORTER_LOG_SPANS=true
JAEGER_ENDPOINT=
JAEGER_USER=
JAEGER_PASSWORD=
#JAEGER_AGENT_HOST=tracer
JAEGER_AGENT_PORT=6831
